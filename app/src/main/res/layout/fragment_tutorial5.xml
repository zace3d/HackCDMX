<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorAppBlue"
    tools:context="mx.citydevs.hackcdmx.TutorialActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/section_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <mx.citydevs.hackcdmx.views.CustomTextView
                        android:id="@+id/dialogo_acercade_tv_correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        app:typeface="Tw_Cen_MT"
                        android:text="@string/text_acercade" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/dialogo_iv_setravi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher_ssp" />

                        <ImageView
                            android:id="@+id/dialogo_iv_lab"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher_labplc" />

                        <ImageView
                            android:id="@+id/dialogo_iv_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher_citydevs" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
