<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorAppBlue">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:src="@drawable/bg_top_internas"/>

        <ImageView
            android:id="@+id/officer_result_carrito"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/coche_patrulla"/>
    </RelativeLayout>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:id="@+id/officer_result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/colorTextBackground"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAppGrey"
        app:typeface="Tw_Cen_MT"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:id="@+id/officer_result_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa: "
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/colorTextBackground"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAppGrey"
        app:typeface="Tw_Cen_MT"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/officers_ok"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAppYellow"
        app:typeface="Tw_Cen_MT"/>

    <LinearLayout
        android:id="@+id/officer_result_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_btn_rect"
        android:padding="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/placa"
            android:layout_gravity="center_vertical"/>

        <mx.citydevs.hackcdmx.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/officers_btn_evaluate"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorTextBackground"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:typeface="Tw_Cen_MT_Bold"/>
        </LinearLayout>
</LinearLayout>